{{#accordion-list as |accordion|}}
<div class="flex flex-col items-center">
    {{#each model as |artist index|}}
    <div
        class="border-r border-b border-l border-gray-400 lg:border-t lg:border-gray-400 bg-white rounded p-2 flex flex-col justify-between leading-normal w-1/3 mb-4 shadow">
        {{#accordion.item as |accordionItem|}}
        {{#accordionItem.toggle}}
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <div
                    class="flex items-center justify-center text-2xl text-green-700 w-10 m-w-full h-10 border border-green-700 rounded-full mr-4">
                    {{add index 1}}</div>
                <div class="flex flex-col max-w-sm">
                    <div class="text-gray-900 font-bold text-xl">{{artist.im:artist.label}}</div>
                    <div class="text-gray-600 text-xl mb-2">{{artist.im:name.label}}</div>

                </div>
            </div>
            <div>

                <img class="w-16 h-16 rounded-full mr-4" src={{artist.im:image.[1].label}}
                    alt="Avatar of {{artist.im:artist.label}}">
            </div>
        </div>
        {{/accordionItem.toggle}}
        {{#accordionItem.panel}}
        <div class="flex items-center justify-between mt-4 mr-8 ml-12 text-gray-600">

            <p>{{artist.category.attributes.term}}</p>
            <p>{{artist.im:price.label}}</p>
        </div>
        <div class="flex items-start justify-between mr-8 ml-12 text-gray-600">

            <p><i class="italic">released on:</i> {{artist.im:releaseDate.attributes.label}}</p>
            {{!-- <p class="max-w-sm">{{artist.rights.label}}</p> --}}
        </div>
        {{/accordionItem.panel}}
        {{/accordion.item}}
    </div>
    {{/each}}
</div>
{{/accordion-list}}